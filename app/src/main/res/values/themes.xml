<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- day theme -->
    <style name="Base.Theme.KirovKuzminCHORT" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_light_primary</item>
        <item name="colorOnPrimary">@color/theme_light_onPrimary</item>
        <item name="android:windowBackground">@drawable/screen_gradient</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- day splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/zagadka_kalkulator</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.KirovKuzminCHORT</item>
    </style>

    <style name="Theme.KirovKuzminCHORT" parent="Base.Theme.KirovKuzminCHORT" />
</resources>
